{
  "name": "Submit Form Notifier",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://dashboard.microverse.org/*"],
      "js": [
        "js/notify.js"
      ]
    }
  ],
  "background" : {
    "scripts" : ["js/background.js"],
    "persistent": false
  },
  "permissions": ["notifications", "activeTab", "storage"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Submit Form Notifier"
  },
  "manifest_version": 2
}
